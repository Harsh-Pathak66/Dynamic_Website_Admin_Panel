<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Farsan&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Beth+Ellen&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/admin/css/style.css">
    </head>
<body>
    
    <%-include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
                <%-include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h2 style="text-align: center;">Testinominals Managment</h2>
                    <table class="table table-hover">
                        <tr>
                            <th>Total Testi : <%=totaltesti%></th>
                            <th>Total Publish : <%=totalpublish%></th>
                            <th>Total UnPublish : <%=totalunpublish%></th>
                        </tr>
                    </table>
                    <!-- <h4 class="text-center">Search By Status</h4>
                    <form action="" method="post">
                        <label for="">Select Status</label>
                        <select name="status" id="" class="form-select">
                            <option value="publish">Publish</option>
                            <option value="unpublish">Unpublish</option>
                        </select>
                        <button type="submit" class="btn btn-info form-control mb-5 mt-1">Search</button> -->

                    <table class="table table-hover">
                        <tr>
                            <th>S. No.</th>
                            <th>User Image</th>
                            <th>Quotes</th>
                            <th>User Name</th>
                            <th>Posted Date</th>
                            <th>Quotes Status</th>
                            <th>Action</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><img style="width: 100px;" src="/upload/<%=result.img%>" alt=""></td>
                                <td><%=result.quotes%></td>
                                <td><%=result.cname%></td>
                                <td><%=result.postedDate%></td>
                                <%if(result.status=='publish'){%>
                                <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-warning"><%=result.status%></button></a></td>
                                <%}else{%>
                                    <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-danger"><%=result.status%></button></a></td>
                                    <%}%>
                                    <td><a href="/admin/testidelete/<%=result.id%>"><i class="bi bi-x-lg" style="font-size: 25px; color: red;"></i></a></td>
                            </tr>
                      <%})%>
                      <%if(!record.length){%>  
                             <tr>
                                <td colspan="7" class="text-center">No Record Found</td>
                             </tr>

                             <%}%>
                    </table>
                </div>
            </div>
        </div>
    </section>
 
   <%-include('../../partials/admin/footer.ejs')%>

</body>
</html>